<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/vertical_gully"
        android:layout_marginRight="@dimen/vertical_gully"
        android:layout_marginTop="@dimen/horizontal_gully"
        android:layout_marginBottom="@dimen/horizontal_gully">

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/item_list_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/vertical_gully"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_list_item_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Heading"
                style="@style/Heading"/>

            <TextView
                android:id="@+id/item_list_item_subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Subheading"
                style="@style/Subheading"
                android:layout_marginTop="@dimen/horizontal_inner_gully"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>